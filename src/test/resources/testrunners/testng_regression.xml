<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">

<suite name="Opencart App Test Regression Suite" thread-count="4"
	parallel="tests" verbose="4">

	<listeners>
		<listener
			class-name="com.qa.opencart.listeners.ExtentReportListener" />
		<listener
			class-name="com.qa.opencart.listeners.TestAllureListener" />
		<listener
			class-name="com.qa.opencart.listeners.AnnotationTransformer" />
	</listeners>

	<test name="Login Page Test_firefox_122.0">
		<parameter name="browser" value="firefox" />
		<parameter name="browserversion" value="122.0" />
		<parameter name="testcasename" value="Login Page Test" />

		<classes>
			<class name="com.qa.opencart.tests.LoginPageTest" />
		</classes>
	</test>

	<test name="Accounts Page Test_chrome_109.0">
		<parameter name="browser" value="chrome" />
		<parameter name="browserversion" value="109.0" />
		<parameter name="testcasename" value="Accounts Page Test" />

		<classes>
			<class name="com.qa.opencart.tests.AccountsPageTest" />
		</classes>
	</test>

	<test name="Accounts Page Test_chrome_119.0">
